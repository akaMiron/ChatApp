@model CA.Common.ViewModels.LoginView

@using System.Web.Mvc.Html
@using CA.Resources

@{
    ViewBag.Title = LoginResources.Enter;

    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}

<h2>@HomeResources.Enter</h2>

@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    <fieldset>
        <legend>@LoginResources.Enter</legend>
        <div class="form-group">
            <label for="name">
                @LoginResources.Username
            </label>
            <div>
                @Html.TextBox("Name", Model.Name, new { id = "name", @class = "form-control" })
                @Html.ValidationMessage("Name", new { @class = "form-text text-danger" })
            </div>

        </div>
        <div class="form-group">
            <label for="password">
                @LoginResources.Password
            </label>
            <div>
                @Html.Password("Password", Model.Password, new { id = "password", @class = "form-control" })
                @Html.ValidationMessage("Password", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-secondary">
                @LoginResources.GoNext
            </button>
        </div>
    </fieldset>
}