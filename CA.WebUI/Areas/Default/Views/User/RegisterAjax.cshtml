@using CA.Resources
@model CA.Common.ViewModels.UserView

<div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Register</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                @using (Html.BeginForm("RegisterAjax", "User", FormMethod.Post, new {@class = "md-form mb-5", id = "RegisterForm"}))
                {
                    <fieldset>
                        <div class="form-group">
                            <label for="name">
                                @LoginResources.Username
                            </label>
                            <div>
                                @Html.ValidationMessage("Name", new { @class = "form-text text-danger" })
                                @Html.TextBox("Name", Model.Name, new { id = "name", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">
                                @LoginResources.Password
                            </label>
                            <div>
                                @Html.ValidationMessage("Password", new { @class = "form-text text-danger" })
                                @Html.Password("Password", Model.Password, new { id = "password", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">
                                @LoginResources.ReEnterPassword
                            </label>
                            <div>
                                @Html.ValidationMessage("ConfirmPassword", new { @class = "form-text text-danger" })
                                @Html.Password("ConfirmPassword", Model.ConfirmPassword, new { id = "confirmPassword", @class = "form-control"} )
                            </div>
                        </div>
                    </fieldset>
                }
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                    <button class="btn btn-primary" id="RegisterButton">Login</button>
                </div>
            </div>
        </div>
    </div>
</div>